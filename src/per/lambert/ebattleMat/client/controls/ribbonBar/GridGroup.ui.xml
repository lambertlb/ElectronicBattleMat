<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<g:HTMLPanel>
		<g:FlowPanel ui:field="panel">
			<g:Grid>
				<g:row>
					<g:customCell>
						<g:CheckBox ui:field="showGrid" text="Show Grid" styleName="ribbonBarLabel" />
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="Grid Size" styleName="ribbonBarLabel" />
					</g:customCell>
					<g:customCell>
						<g:DoubleBox ui:field="gridSizeBox" styleName="ribbonBarLabel" />
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="OffsetX" styleName="ribbonBarLabel" />
					</g:customCell>
					<g:customCell>
						<g:DoubleBox ui:field="gridOffsetX" styleName="ribbonBarLabel" />
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="OffsetY" styleName="ribbonBarLabel" />
					</g:customCell>
					<g:customCell>
						<g:DoubleBox ui:field="gridOffsetY" styleName="ribbonBarLabel" />
					</g:customCell>
				</g:row>
			</g:Grid>
		</g:FlowPanel>
	</g:HTMLPanel>
</ui:UiBinder> 